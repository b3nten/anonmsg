#!/bin/bash

# Color definitions
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
WHITE='\033[1;37m'
NC='\033[0m' # No Color

# Function to print colored messages
print_step() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

print_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

print_header() {
    echo -e "\n${PURPLE}================================${NC}"
    echo -e "${WHITE}$1${NC}"
    echo -e "${PURPLE}================================${NC}\n"
}

# Script execution
print_header "üöÄ STARTING DEVELOPMENT SERVER"

print_step "üßπ Cleaning database..."
if rm -rf internal/database; then
    print_success "Database cleaned successfully"
else
    print_error "Failed to clean database"
    exit 1
fi

print_step "‚öôÔ∏è  Generating SQLC..."
if sqlc generate; then
    print_success "SQLC generated successfully"
else
    print_error "Failed to generate SQLC"
    exit 1
fi

print_step "üî• Starting cmd/app..."
print_header "SERVER IS RUNNING"


go run cmd/app/main.go
